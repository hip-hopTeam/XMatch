<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:paddingTop="21dp"
        android:id="@+id/manager_add_dep_bar"
        android:background="@color/transparent"
        android:layout_width="match_parent"
        android:layout_height="71dp"
        android:elevation="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/activity_detail_back"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/text_padding_large"
                android:src="@drawable/icon_back" />
            <TextView
                android:text="活动详情"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
            </TextView>
            <TextView
                android:id="@+id/activity_detail_add_image"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="更换图片"
                android:textColor="@color/colorWhite"
                android:layout_marginRight="8dp"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/add_dep_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/activity_detail_image"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:scaleType="centerCrop"
                android:elevation="8dp"/>

            <LinearLayout
                android:padding="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/score_item_bg"
                android:orientation="horizontal"
                android:elevation="8dp"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/activity_detail_title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@color/colorWhite"
                    android:text="活动标题:"
                    android:textSize="@dimen/text_size_super" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_weight="3"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_marginTop="@dimen/text_padding"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/text_padding"
                        android:paddingRight="@dimen/text_padding">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="时间:"
                            android:gravity="center"
                            android:textSize="@dimen/text_size_normal" />
                        <TextView
                            android:id="@+id/activity_detail_time"
                            android:layout_marginLeft="@dimen/text_padding"
                            android:padding="4dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:singleLine="false"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="@dimen/text_padding"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/text_padding"
                        android:paddingRight="@dimen/text_padding">

                        <TextView
                            
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="地点:"
                            android:gravity="center"
                            android:textSize="@dimen/text_size_normal" />
                        <TextView
                            android:id="@+id/activity_detail_address"
                            android:layout_marginLeft="@dimen/text_padding"
                            android:padding="4dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:singleLine="true"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="@dimen/text_padding"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/text_padding"
                        android:paddingRight="@dimen/text_padding">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="主办方:"
                            android:gravity="center"
                            android:textSize="@dimen/text_size_normal" />
                        <TextView
                            android:id="@+id/activity_detail_manager"
                            android:layout_marginLeft="@dimen/text_padding"
                            android:padding="4dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:singleLine="true"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="@dimen/text_padding"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/text_padding"
                        android:paddingRight="@dimen/text_padding">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="综测:"
                            android:gravity="center"
                            android:textSize="@dimen/text_size_normal" />
                        <TextView
                            android:id="@+id/activity_detail_measure"
                            android:layout_marginLeft="@dimen/text_padding"
                            android:padding="4dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:singleLine="true"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="@dimen/text_padding"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/text_padding"
                        android:paddingRight="@dimen/text_padding">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="报名人数: 10/11"
                            android:gravity="center"
                            android:textSize="@dimen/text_size_normal" />
                        <TextView
                            android:id="@+id/activity_detail_apply"
                            android:layout_marginLeft="@dimen/text_padding"
                            android:padding="4dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:singleLine="true"/>
                    </LinearLayout>
                </LinearLayout>
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" >
                    <TextView
                        android:id="@+id/activity_detail_sign"
                        android:layout_centerInParent="true"
                        android:layout_width="128dp"
                        android:layout_height="48dp"
                        android:background="@drawable/sign_button_bg_blue"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/text_size_super"
                        android:elevation="8dp"
                        android:gravity="center"
                        android:text="签到情况"/>
                </RelativeLayout>
            </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/text_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/text_padding"
            android:paddingRight="@dimen/text_padding"
            >

            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="match_parent"-->
                <!--android:gravity="center"-->
                <!--android:text="活动内容:"-->
                <!--android:textColor="@color/colorBlack"-->
                <!--android:textSize="@dimen/text_size_normal" />-->
            <TextView
                android:id="@+id/activity_detail_content"
                android:layout_marginTop="8dp"
                android:padding="8dp"
                android:gravity="top"
                android:textSize="@dimen/text_size_large"
                android:background="@drawable/corner_bg_white"
                android:textColor="@color/colorBlack"
                android:lineSpacingExtra="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>