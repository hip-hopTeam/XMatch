<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/item_notice_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/item_notice_avator"
        android:layout_width="@dimen/avator_size"
        android:layout_height="@dimen/avator_size"
        android:layout_gravity="center_vertical"
        android:background="@drawable/notice_avator_circle"
        android:text="外"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

            <TextView
                android:id="@+id/item_notice_title"
                android:paddingLeft="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_size_normal"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="关于看沙发咖啡通知"></TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/item_notice_dep"
            android:paddingLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="外联部"
            android:textColor="@color/colorPrimary"
            android:singleLine="true"
            />
        <TextView
            android:id="@+id/item_notice_date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="12月21日"
            android:layout_marginRight="16dp"
            />
    </LinearLayout>
        <TextView
            android:id="@+id/item_notice_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginRight="8dp"
            android:text="明日三国杀戮空间杀快点积分可视对讲福利卡圣诞节"
            android:singleLine="true"/>


    </LinearLayout>
</LinearLayout>