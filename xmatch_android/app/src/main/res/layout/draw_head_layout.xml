<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    android:layout_marginBottom="32dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <com.example.coderqiang.xmatch_android.view.CircleImagview
        android:id="@+id/nav_header_dep_avator"
        android:layout_marginTop="32dp"
        android:layout_gravity="center_horizontal"
        android:scaleType="centerCrop"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/avator"/>

    <TextView
        android:id="@+id/nav_header_name"
        android:layout_marginTop="8dp"
        android:textSize="16sp"
        android:textColor="@color/draw_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="实践外联部" />
    <TextView
        android:id="@+id/nav_header_role"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:gravity="center_horizontal"
        android:text="部长:xxx"
        android:textColor="@color/colorBlackLight_2"/>

</LinearLayout>
