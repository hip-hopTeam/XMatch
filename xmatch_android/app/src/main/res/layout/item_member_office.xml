<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_member_office_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <com.example.coderqiang.xmatch_android.view.CircleImagview
        android:id="@+id/item_member_office_avator"
        android:layout_width="@dimen/avator_size"
        android:layout_height="@dimen/avator_size"
        android:src="@drawable/avator"/>
    <TextView
        android:paddingLeft="@dimen/text_size_large"
        android:id="@+id/item_member_office_name"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:layout_height="@dimen/avator_size"
        android:layout_gravity="center_vertical"
        android:textColor="@color/colorBlack"
        android:text="郑世强"/>

    <ImageView
        android:id="@+id/item_member_office_message"
        android:layout_marginRight="@dimen/text_padding_large"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_mail"/>
    <ImageView
        android:id="@+id/item_member_office_phone"
        android:layout_marginRight="8dp"
        android:layout_gravity="center_vertical"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        android:src="@drawable/ic_phone"/>

</LinearLayout>