<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_user_dep_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/text_padding">
    <com.example.coderqiang.xmatch_android.view.CircleImagview
        android:id="@+id/item_user_dep_avator"
        android:layout_width="@dimen/avator_size"
        android:layout_height="@dimen/avator_size"
        android:scaleType="centerCrop"
        android:src="@drawable/avator"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="@dimen/avator_size"
        android:gravity="center_vertical"
        android:orientation="vertical">
        <TextView
            android:id="@+id/item_user_dep_name"
            android:paddingLeft="@dimen/text_size_large"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="@dimen/avator_size"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_size_normal"
            android:text="校社联"/>
    </LinearLayout>

    <TextView
        android:id="@+id/item_user_dep_activity"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textColor="@color/course_color9"
        android:gravity="center"
        android:layout_marginRight="12dp"
        android:text="活动安排"/>
    <ImageView
        android:id="@+id/item_department_more"
        android:layout_marginRight="8dp"
        android:layout_gravity="center_vertical"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        android:src="@drawable/ic_more_blue"/>
</LinearLayout>