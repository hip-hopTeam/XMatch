            <!--android:id="@+id/manager_add_dep_image_tv"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="@dimen/icon_size_super"-->
            <!--android:gravity="center_horizontal"-->
            <!--android:textSize="@dimen/text_size_normal"-->
